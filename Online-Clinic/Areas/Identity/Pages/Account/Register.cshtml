@page
@model RegisterModel
@{
    ViewData["Title"] = "Kaydol";
}

@*<h2>@ViewData["Title"]</h2>*@
<h4>Kayıt alanlarını eksiksiz doldurunuz*</h4>


<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Ad"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Soyad"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DoğumTarihi"></label>
                <input asp-for="Input.DoğumTarihi" class="form-control" />
                <span asp-validation-for="Input.DoğumTarihi" class="text-danger"></span>
            </div>
            <div>
                <label for="exampleTextarea">CİNSİYET</label>
                <div class="form-check">
                    <div>
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1">
                        Kadın
                    </div>
                </div>
                <div class="form-check">
                    <div>
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                        Erkek
                    </div>
                </div>
                <div class="form-check">
                    <div>
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                        Belirtmek İstemiyorum
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Kaydol</button>
        </form>
    </div>
</div>
