<div class="row" style="margin-top:30px auto">
    <div class="col-md-6">
        <h4>Kayıt olmak için alanları eksiksiz doldurunuz</h4>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<hr />*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.KullanıcıAdı"></label>
                <input asp-for="Input.KullanıcıAdı" class="form-control" />
                <span asp-validation-for="Input.KullanıcıAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role">
                    <option disabled>Üyelik Tipi Seçiniz</option>
                    <option value="Seçiniz">Seçiniz</option>
                    <option value="Bağışçı">Bağışçı</option>
                    <option value="Doktor">Doktor</option>
                    <option value="Hasta">Hasta</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Ad"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Soyad"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DoğumTarihi"></label>
                <input asp-for="Input.DoğumTarihi" class="form-control" type="date" />
                <span asp-validation-for="Input.DoğumTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cinsiyet"></label>
                <select asp-for="Input.Cinsiyet">
                    <option disabled>Cinsiyet Seçiniz</option>
                    <option value="Seçiniz">Seçiniz</option>
                    <option value="Belirtmek istemiyorum">Belirtmek istemiyorum</option>
                    <option value="Kadın">Kadın</option>
                    <option value="Erkek">Erkek</option>
                </select>
                <span asp-validation-for="Input.Cinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Kaydol</button>
        </form>
    </div>
</div>

